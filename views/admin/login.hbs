<div class='row'>
  <div class='col-md-6 m-auto'>
    <div class='container mt-5 pl-5'>
      <h2 class='text-center'>ADMIN LOGIN</h2>
      <form action='/admin/login' method='POST'>
        {{#if loginErr}}
          <p class='error'>{{loginErr}}</p>
        {{/if}}
        <div class='form-group'>
          <label>Email address</label>
          <input type='email' class='form-control' name='adminEmail' placeholder='Email Id'/>
        </div>
        <div class='form-group'>
          <label>Password</label>
          <input type='password' class='form-control' name='adminPassword' placeholder='Password'/>
        </div>
        <a href='/admin/signup'>Create new Account ?</a>
        <button type='submit' class='btn btn-primary float-right'>Login</button>
      </form>
    </div>
  </div>
</div>