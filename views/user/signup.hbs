<div class='row'>
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Create User Account </h2>
            <form action="/usersignup" method="post">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="userName" placeholder="Name">
                </div>
                <div class="form-group">
                    <label>Email Address</label>
                    <input type="email" class="form-control" name="userEmail" placeholder="Email Id">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="userPassword" placeholder="Password">
                </div>
                <a href="/userlogin">Already have Account ?</a>
                
                <button type="submit" class="btn btn-primary float-right">Signup</button>
            </form>  
        </div>
