<section>
  <div class='container mt-4'>
    <div class='row'>
      {{#each products}}
        <div class='col-md-3 p-3'>
          <div class='card' style='width: 15rem; height:30rem;'>
            <img
              class='card-img-top'
              src='/product-images/{{this._id}}.jpg'
              alt='Card image cap'
              style='height: 15rem; width: 10rem;'
            />
            <div class='card-body'>
              <h5 class='card-title'>{{this.Name}}</h5>
              <p class='card-text'>{{this.Category}}</p>
              <p class='card-text'>{{this.Price}}</p>
              <p class='card-text'>{{this.Description}}</p>
              <button class='btn btn-primary' onclick="addToCart('{{this._id}}')">Add to Cart</button>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>